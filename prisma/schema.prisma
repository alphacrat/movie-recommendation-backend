generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Add more fields as needed
}

model Movie {
  id          Int      @id @default(autoincrement())
  title       String
  genre       String
  releaseYear Int
  rating      Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
